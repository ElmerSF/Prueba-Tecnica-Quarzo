@model Prueba_Quarzo.Models.Modelo_tabla_Categorias
@{
    ViewBag.Title = "Producto por Categoría";
}

<h2>Productos por categoría</h2>

@using (Html.BeginForm("Get_todo_Producto", "Productos", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th>Código del Producto:</th>
                    <th>Nombre:</th>
                    <th>Precio:</th>
                    <th>Categoría a la que pertenece:</th>

                </tr>
                <tr>
                    <td>
                        @foreach (string codigo in ViewBag.codigo)
                        {
                            <ul class="table-bordered">
                                @codigo
                            </ul>
                        }
                    </td>
                    <td>
                        @foreach (string nombre in ViewBag.nombre)
                        {
                            <ul class="table-bordered">
                                @nombre
                            </ul>
                        }
                    </td>
                    <td>
                        @foreach (string precio in ViewBag.precio)
                        {
                            <ul class="table-bordered">
                                @precio
                            </ul>
                        }
                    </td>
                    <td>
                        @foreach (string categoira in ViewBag.categoria)
                        {
                            <ul class="table-bordered">
                                @categoira
                            </ul>
                        }
                    </td>

                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <p>Ingrese por el favor la Categoría del Producto y se mostrarán todos los productos de dicha categoría</p>
        <div class="form-group">
            <div>@Html.LabelFor(x => x.Codigo_Categoria)</div>
            <div title="Escriba el Código de Categoría a consultar">@Html.TextBoxFor(x => x.Codigo_Categoria)</div>
        </div>
        <div class="form-group">
            <input type="submit" typeof="Enviar" value="Consultar" class="btn-success" title="Se consultarán los Productos" />

        </div>
        <div class="alert-info">

        </div>

    </div>
}
